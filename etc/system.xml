<?xml version="1.0"?>
<config>
	<sections>
		<google>
			<groups>
				<googletrustedstores translate="label" module="googletrustedstores">
					<label>Google Trusted Stores</label>
					<frontend_type>text</frontend_type>
					<sort_order>999</sort_order>
					<show_in_default>1</show_in_default>
					<show_in_website>1</show_in_website>
					<show_in_store>0</show_in_store>
					<fields>
						<enabled translate="label">
							<label>Enable Google Trusted Store</label>
							<frontend_type>select</frontend_type>
							<source_model>adminhtml/system_config_source_yesno</source_model>
							<sort_order>1</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</enabled>
						<key translate="label">
							<label>Feed security key (recommended!)</label>
							<comment>Use this in the url you submit to google. e.g /googletrustedstores/feed/shipments?key=12345 so that others cannot (easily) access the data</comment>
							<frontend_type>text</frontend_type>
							<sort_order>3</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</key>
						<googleid translate="label">
							<label>Google Id</label>
							<comment>For example 1234 in this code: gts.push(["id", "1234"]); To get your id go to the &lt;a href='https://www.google.com/trustedstores/sell/setupcode'&gt;code setup page&lt;/a&gt;.</comment>
							<frontend_type>text</frontend_type>
							<sort_order>5</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</googleid>
						<shipdays translate="label">
							<label>Days to ship</label>
							<comment>Choose the upper bound, for example if you promise to ship in 1-3 days, enter '3'.</comment>
							<frontend_type>text</frontend_type>
							<sort_order>7</sort_order>
							<show_in_default>1</show_in_default>
							<show_in_website>0</show_in_website>
							<show_in_store>0</show_in_store>
						</shipdays>
						</fields>
				</googletrustedstores>
			</groups>
		</google>
	</sections>
</config>